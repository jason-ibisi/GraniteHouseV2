@model GraniteHouseV2_Models.OrderHeader

@{
    ViewData["Title"] = "Shopping Cart Inquiry Confirmation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center">
    @if (Model != null)
    {
        <h1 class="text-info">Order Confirmation</h1>
        <p>Order #@Model.OrderHeaderId has been created successfully!</p>
    }
    else
    {
        <h1 class="text-info">Inquiry Confirmation</h1>
        <p>We have received your inquiry and someone from our team will contact you shortly!</p>
    }

    <img src="/images/patio.jpg" width="80%" />
</div>
